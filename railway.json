{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "context": "apps/backend"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "pnpm --filter joshua-backend start",
    "restartPolicyMaxRetries": 5
  },
  "env": {
    "PORT": 3000,
    "NODE_ENV": "production"
  }
}
